{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [
            "node",
            "express",
            "jest"
        ]
    },
    "include": [
        "src/**/*",
        
    ]
}